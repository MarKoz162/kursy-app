= render layout: 'courses/course_creator/step' do   
  = simple_form_for @course, url: course_course_creator_path, method: :put do |f|
    = f.input :title
    .row
    - if @course.avatar.attached?
      = image_tag @course.avatar, width: "200px"
      .row
      = @course.avatar.filename
    .row
    = f.input :avatar
    = f.input :description, as: :rich_text_area
    = f.input :short_description
    
    %p
    = f.button :submit, class: 'btn btn-sm btn-success'