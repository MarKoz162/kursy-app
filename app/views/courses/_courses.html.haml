.card{:style => "margin: 5px; min-width: 250px;"}
  .card-header
    .fa.fa-book
    = link_to course.title, course_path(course)
  .card-body
    %small= simple_format(course.short_description)
  .card-footer
    = course.language
    = course.level
  .card-footer
    = enrollment_button(course)
  .card-footer
    .fa.fa-book-open
    = course.lessons.count
  .card-footer
    .far.fa-clock
    = course.created_at.strftime('%d-%b-%Y')
    %br/
    .far.fa-user
    = link_to course.user.username, user_path(course.user)
  .card-footer
    %td= link_to 'Show', course, class: 'btn btn-sm btn-primary'
    %td= link_to 'Edit', edit_course_path(course), class: 'btn btn-sm btn-warning' if policy(course).edit?
    %td= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' if policy(course).destroy?

    