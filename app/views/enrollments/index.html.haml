- content_for :title do 
  kursy-app
  \|
  All Enrollments

%h3
  .text-center
    Enrollments
    .badge.bg-primary
      = @enrollments.count

.table-responsive
  %table.table.table-bordered.table-striped.table.sm
    %thead
      %tr
        %th ID
        %th
          .fa.fa-user
          User
        %th{:style => "min-width: 100px;"} 
          .fa.fa-book
          Course
        %th 
          .fa.fa-clock
          bought
        %th
          .fa.fa-dollar-sign
          Price
        %th{:style => "min-width: 135px;"}
          .text-warning.fa.fa-clock
          Reviewed on  
        %th
          .text-warning.fas.fa-comment
          Review
        %th{:style => "min-width: 90px;"} 
          .text-warning.fa.fa-star
          Rating
        %th
        %th
        %th
  
    %tbody
      - @enrollments.each do |enrollment|
        %tr
          %td= enrollment.id
          %td= link_to enrollment.user, user_path(enrollment.user)
          %td= link_to enrollment.course, courses_path(enrollment.course)
          %td= enrollment.created_at.strftime("%d/%b/%Y, %H:%M")
          %td= number_to_currency(enrollment.price)
          %td
            - if enrollment.rating.present?
              = enrollment.updated_at.strftime("%d/%b/%Y, %H:%M")
          %td= enrollment.updated_at.strftime("%d/%b/%Y, %H:%M")
          %td= enrollment.rating
          %td= enrollment.review
          %td= link_to 'See review', enrollment
          %td= link_to 'Add review', edit_enrollment_path(enrollment)
          %td= link_to 'Delete enrollmet', enrollment, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Enrollment', new_enrollment_path
